                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserName"] != null)
                    {

                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <i class="fa fa-user fa-pull-left" style="font-size:24px"></i>@Session["Name"] <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Edit Profile</a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("Logout","AccountTest")">Log out </a></li>
                            </ul>
                              
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">

                            <a href="@Url.Action("TestLogin","AccountTest")"><i class="fa fa-user-circle fa-pull-left" style="font-size:24px"></i>Login</a>

                        </li>
                    }






                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <i class="fa fa-shopping-cart fa-pull-left" style="font-size:24px"></i>Cart() <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            @if (Session["cart"] != null)
                            {
                                foreach (Item item in (List<Item>)Session["cart"])
                                {
                                    <li>

                                        <a href="@Url.Action("RemoveFromCart", "Home", new { productId=item.Product.ProductId})">
                                            @item.Product.ProductName (@item.Quantity)
                                            <i class="fa fa-times fa-pull-right"></i>
                                        </a>
                                    </li>
                                }
                            }
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Checkout","Home")">Checkout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <div class="nav-menus">
                        <ul class="nav nav-pills">
                            <li class="active"><a style="border-radius: 1em;" href="#">Home</a></li>
                            <li><a style="border-radius: 1em;" href="#">Contact</a></li>
                            <li><a style="border-radius: 1em;" href="#">About</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            @RenderBody()
            <hr />
            <footer class="text-center text-white " style="background: #242628; color: white; width:100%;margin-bottom:-40px">
