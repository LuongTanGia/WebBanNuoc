    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MainLayout.css" rel="stylesheet" />
    
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1>
                        <img src="~/Content/images/logo2.png" style="width:15%; height:10%; object-fit: cover; color:white;" />
                        <a href="#">HHTT <span style="color:#000">Team</span></a>
                    </h1>
                    <p style="color: #00BFFF">Drinks Shopping Store</p>
                </div>
            </div>

            
            <div class="col-md-6 col-sm-6 col-xs-6">
                @*<div class="account">
           <ul>
               <li>
                   <div class="hidden-xs">
